normal{
    header {
        text("Polygons"),
    }
    body{
        grid((6,3),columns-weight:[1,3]){
            styles:{
                "*": {margin:2}
                source:{
                    at:left
                }
            }
            // Row
            stack(background:white,draw-contour){
                pentagon(at:center, size:50, background:$palette[4], color:$palette[2])
            }
            source(tson, """
                pentagon()
                """)

            // Row
            stack(background:white,draw-contour){
                hexagon(at:center, size:50, background:$palette[4], color:$palette[2])
            }
            source(tson, """
                hexagon()
                """)

            // Row
            stack(background:white,draw-contour){
                heptagon(at:center, size:50, background:$palette[4], color:$palette[2])
            }
            source(tson, """
                heptagon()
                """)


            // Row
            stack(background:white,draw-contour){
                octagon(at:center, size:50, background:$palette[4], color:$palette[2])
            }
            source(tson, """
                octagon()
                """)

            // Row
            stack(background:white,draw-contour){
                nonagon(at:center, size:50, background:$palette[4], color:$palette[2])
            }
            source(tson, """
                nonagon()
                """)

            // Row
            stack(background:white,draw-contour){
                decagon(at:center, size:50, background:$palette[4], color:$palette[2])
            }
            source(tson, """
                decagon()
                """)

            // Row
            stack(background:white,draw-contour){
                polygon(at:center, size:50, background:$palette[4], color:$palette[2])
            }
            source(tson, """
                polygon()
                """)

            // Row
            stack(background:white,draw-contour){
                polygon(at:center, size:50, count:8, background:$palette[4], color:$palette[2])
            }
            source(tson, """
                polygon(count:8)
                """)

            // Row
            stack(background:white,draw-contour){
                polygon(at:center, size:50, points:[(0,0),(50,0),(100,20),(80,80)], background:$palette[4], color:$palette[2])
            }
            source(tson, """
                polygon(points:[
                (0,0),(50,0),
                (100,80),(50,50)
                ])
                """)

        }
    }

}
